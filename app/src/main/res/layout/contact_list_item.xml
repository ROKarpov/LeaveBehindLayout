<?xml version="1.0" encoding="utf-8"?>
<com.romankarpov.leavebehindlayout.LeaveBehindLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:background="@color/listBackground"
    app:flyoutableSides="start"
    app:leftBehindViewAnimation="noAnimation">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/contact_list_item__image"
            android:layout_width="@dimen/contact_list_item__image_size"
            android:layout_height="@dimen/contact_list_item__image_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/contact_list_item__horizontal_padding"
            android:layout_marginStart="@dimen/contact_list_item__horizontal_padding"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/contact_list_item__name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/contact_list_item__horizontal_padding"
            android:layout_marginStart="@dimen/contact_list_item__horizontal_padding"
            android:layout_marginRight="@dimen/contact_list_item__horizontal_padding"
            android:layout_marginEnd="@dimen/contact_list_item__horizontal_padding"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start|left"
        android:src="@drawable/ic_delete_white_24dp"
        android:padding="16dp"
        android:scaleType="fitStart"
        app:layout_openable="false"/>
    <LinearLayout
        android:id="@+id/end_left_behind"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end|right">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/lbl_item__horizontal_padding"
            android:paddingTop="@dimen/lbl_item__vertical_padding"
            android:paddingRight="@dimen/lbl_item__horizontal_padding"
            android:paddingBottom="@dimen/lbl_item__vertical_padding"
            android:src="@drawable/ic_favorite_border_black_24dp"/>
        <!--style="@style/LeaveBehindItem"-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/lbl_item__horizontal_padding"
            android:paddingTop="@dimen/lbl_item__vertical_padding"
            android:paddingRight="@dimen/lbl_item__horizontal_padding"
            android:paddingBottom="@dimen/lbl_item__vertical_padding"
            android:src="@drawable/ic_block_black_24dp"/>
        <!--style="@style/LeaveBehindItem"-->
    </LinearLayout>
</com.romankarpov.leavebehindlayout.LeaveBehindLayout>